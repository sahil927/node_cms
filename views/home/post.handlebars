 <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="#">{{post.user.firstName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateDate post.date 'MMMM Do YYYY'}} at {{generateDate post.date 'LT'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

          <hr>

          <!-- Post Content -->
          <p class="lead">{{post.body}}</p>

          <hr>

          <!-- Comments Form -->
          {{#if user}}
           {{#if post.allowComments}}
            <div class="card my-4">
              <h5 class="card-header">Leave a Comment:</h5>
              <div class="card-body">
                <form action="/admin/comments" method="post">
                  <div class="form-group">
                    <textarea name="body" class="form-control" rows="3"></textarea>
                    <input type="hidden" name="id" value="{{post.id}}">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </div>
           {{else}}
              <h4>Comments not allowed for this post</h4>
              <hr>
           {{/if}}
           {{else}}
              You need to login to comment<a href="/login"> Login</a>
              <hr>
           {{/if}}


          <!-- Single Comment -->
          {{#each post.comments}}
          <div class="media mb-4">
            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
            <div class="media-body">
              <h5 class="mt-0">{{user.firstName}}</h5>
              {{body}}
            </div>
          </div>
          {{/each}}

